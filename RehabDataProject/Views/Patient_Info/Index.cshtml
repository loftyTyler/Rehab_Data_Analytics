@model IEnumerable<Patient_Info>
@{
    ViewData["Title"] = "Index";
}

<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-info">Patient Info</h2>
        </div>
        <div class="col-6 text-end">
            <a asp-controller="Patient_Info" asp-action ="Create" class="btn btn-primary">
                <i class="bi bi-plus-circle"></i> &nbsp; Add New Patient
            </a>
        </div>
    </div>
    <br /><br />


<table class="table table-bordered table-striped" style="width:100%">
    <thead>
        <tr>
            <th>
                Patient Name
            </th>
            <th>
                Knee ROM
            </th>
            <th>
                Knee Strength
            </th>
            <th>
                LB Ext Rom
            </th>
            <th>
                LB Flex Rom
            </th>
            <th>
                Pain Free Lift
            </th>
            <th>
                Date Updated
            </th>
            <th>
                Actions
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach(var obj in Model)
        {
            <tr>
                <td>
                    @obj.Name
                </td>
                <td>
                    @obj.KneeROM
                </td>
                <td>
                    @obj.KneeStrength
                </td>
                <td>
                    @obj.LowerbackExtROM
                </td>
                <td>
                    @obj.LowerBackFlexionROM
                </td>
                <td>
                    @obj.PainFreeWeightLifted
                </td>
                <td>
                    @obj.DateUpdated
                </td>
                <td>
                    <div class="btn-group centernav" role="group">
                            <a asp-controller="Patient_Info" asp-action="Edit" asp-route-id="@obj.Id" class="btn btn-primary mx-2"><i class="bi bi-pencil-square"></i>Edit</a>
                            <a asp-controller="Patient_Info" asp-action="IndexOldList" asp-route-id="@obj.Id" class="btn btn-primary mx-2"><i class="bi bi-archive"></i>History</a>
                    </div>
                </td>
            </tr>
        }
    </tbody>
</table>
</div>

